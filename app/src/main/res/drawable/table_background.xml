<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- "shadow" -->
    <item
        android:bottom="2px"
        android:right="2px">
        <shape android:shape="rectangle" >
            <solid android:color="#8FFF" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item
        android:left="2px"
        android:top="2px">
        <shape android:shape="rectangle" >
            <solid android:color="#3000" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item
        android:bottom="2px"
        android:left="2px"
        android:right="2px"
        android:top="2px">
        <shape android:shape="rectangle" >
            <solid android:color="#A000" />

            <corners
                android:radius="2dp"
                android:topLeftRadius="1dp"
                android:topRightRadius="1dp" />
        </shape>
    </item>

</layer-list>