<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- "shadow" -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#1000" />
        </shape>
    </item>
    <item
        android:left="1px"
        android:right="1px">
        <shape android:shape="rectangle" >
            <solid android:color="@color/item_dark" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1px"
        android:right="1px">
        <shape android:shape="rectangle" >
            <solid android:color="@color/item" />
        </shape>
    </item>

</layer-list>