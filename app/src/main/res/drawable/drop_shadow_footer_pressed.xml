<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- "shadow" -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#1000" />

            <corners
                android:radius="2dp"
                android:topLeftRadius="0px"
                android:topRightRadius="0px" />
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px">
        <shape android:shape="rectangle" >
            <solid android:color="#1000" />

            <corners
                android:radius="2dp"
                android:topLeftRadius="0px"
                android:topRightRadius="0px" />
        </shape>
    </item>
    <item
        android:bottom="2px"
        android:left="1px"
        android:right="1px">
        <shape android:shape="rectangle" >
            <solid android:color="@color/blue_pressed" />

            <corners
                android:radius="2dp"
                android:topLeftRadius="0px"
                android:topRightRadius="0px" />
        </shape>
    </item>

</layer-list>